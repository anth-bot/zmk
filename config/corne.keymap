#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        backslash {
            bindings = <&kp BACKSLASH>;
            key-positions = <11 10>;
        };

        apostrophe {
            bindings = <&kp SINGLE_QUOTE>;
            key-positions = <23 22>;
        };

        nav {
            bindings = <&tog 1>;
            key-positions = <37 40>;
        };

        bluetooth {
            bindings = <&mo 5>;
            key-positions = <36 41>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Base";
            bindings = <
&kp ESCAPE  &kp Q  &kp W  &kp E  &kp R         &kp T        &kp Y          &kp U  &kp I      &kp O    &kp P     &kp DELETE
&kp TAB     &kp A  &kp S  &kp D  &kp F         &kp G        &kp H          &kp J  &kp K      &kp L    &kp SEMI  &kp RET
&kp LCTRL   &kp Z  &kp X  &kp C  &kp V         &kp B        &kp N          &kp M  &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                          &mo 4  &kp LEFT_ALT  &kp SPACE    &kp BACKSPACE  &mo 1  &mo 3
            >;
        };

        navigation_layer {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans    &kp UP    &trans     &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &kp LEFT  &kp DOWN  &kp RIGHT  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans    &trans    &trans     &trans  &trans
                        &trans  &trans  &trans    &trans  &mo 2     &trans
            >;

            label = "nav";
        };

        ijkl {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &kp I   &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &kp J   &kp K   &kp L   &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;

            label = "ijkl";
        };

        number_layer {
            bindings = <
&trans  &kp F1  &kp F2   &kp F3   &kp F4   &trans    &trans  &kp N7  &kp N8  &kp N9  &trans  &trans
&trans  &kp F6  &kp F7   &kp F8   &kp F9   &trans    &trans  &kp N4  &kp N5  &kp N6  &trans  &trans
&trans  &kp F9  &kp F10  &kp F11  &kp F12  &trans    &trans  &kp N1  &kp N2  &kp N3  &trans  &trans
                         &trans   &trans   &trans    &kp N0  &trans  &trans
            >;

            label = "num";
        };

        symbol_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Raise";
            bindings = <
&trans  &kp EXCL   &kp AT            &kp HASH        &kp DLLR              &kp PRCNT         &kp CARET     &kp AMPS               &kp ASTRK        &kp LPAR  &kp RPAR  &trans
&trans  &kp GRAVE  &kp LEFT_BRACKET  &kp LEFT_BRACE  &kp LEFT_PARENTHESIS  &kp KP_MINUS      &kp KP_EQUAL  &kp RIGHT_PARENTHESIS  &kp RIGHT_BRACE  &kp RBKT  &kp BSLH  &trans
&trans  &kp TILDE  &kp INSERT        &kp PG_UP       &kp HOME              &kp UNDERSCORE    &kp PLUS      &kp END                &kp PG_DN        &kp DEL   &kp PIPE  &trans
                                     &trans          &trans                &trans            &trans        &kp RIGHT_WIN          &trans
            >;

            label = "sym";
        };

        bluetooth {
            display-name = "num";
            bindings = <
&trans      &trans        &trans        &trans        &trans        &trans          &trans  &trans  &trans  &trans  &trans  &trans
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans        &trans        &trans        &trans        &trans          &trans  &trans  &trans  &trans  &trans  &trans
                                        &trans        &trans        &trans          &trans  &trans  &trans
            >;

            label = "bt";
        };
    };
};
